{
    "manifest_version": 3,
    "name": "Amazon S&S Mass Cancel",
    "version": "1.0.0",
    "description": "Mass cancel all Amazon Subscribe & Save subscriptions with one click",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.amazon.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.com/auto-deliveries/*"
            ],
            "js": [
                "content/extractor.js"
            ],
            "run_at": "document_idle"
        }
    ]
}